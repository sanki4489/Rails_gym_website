<div class="container">
<form style="margin-right: 30%; margin-left: 30%;">
<div class="border border-primary" style="padding: 3%;">
<h3>Sign up for instructor</h3>
<%= form_with(model: instructor) do |form| %>
  <% if instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instructor.errors.count, "error") %> prohibited this instructor from being saved:</h2>

      <ul>
        <% instructor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>

    <%= form.label :phone, class: "form-label" %>
    <%= form.number_field :phone, class: "form-control" %>

    <%= form.label :speciality, class: "form-label" %>
    <%= form.text_field :speciality, class: "form-control" %>

    <%= form.label :salary, class: "form-label" %>
    <%= form.number_field :salary, class: "form-control" %>

    <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
</div>
</form>
</div>
