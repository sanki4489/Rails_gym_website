<div class="container">
<form style="margin-right: 30%; margin-left: 30%;">
<h2>Purchase the plan</h2>
<div class="border border-primary" style="padding: 3%">
<%= form_with model: @user do |f| %>
    <%= f.label :name, class:"form-label" %>
    <%= f.text_field :name, class: "form-control" %>
    <%= f.label :contactNumber, class:"form-label" %>
    <%= f.text_field :contactNumber, class: "form-control" %>
    <%= f.label :select, class:"form-label" %>
    <div class="form-check">
        <%= f.radio_button :plan, "basic", class:"form-check-input" %>
        <%= f.label :basic, class: "form-check-label" %>
    </div>    
    <div class="form-check">   
        <%= f.radio_button :plan, "premium", class:"form-check-input" %>
        <%= f.label :premium, class: "form-check-label" %>
     </div>   
    <div class="form-check">    
        <%= f.radio_button :plan, "VIP", class:"form-check-input" %>
        <%= f.label :vip, class: "form-check-label" %>
    </div>
    
    <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
</div>
</form>
</div>